{
  "openapi": "3.0.0",
  "info": {
    "title": "BAC Hub API",
    "description": "API for BAC Hub educational platform",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Development server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          }
        }
      },
      "Profile": {
        "type": "object",
        "properties": {
          "user": {
            "$ref": "#/components/schemas/User"
          },
          "field": {
            "type": "string",
            "enum": ["علوم تجريبية", "رياضيات", "تقني رياضي", "تسيير و اقتصاد", "آداب و فلسفة", "لغات أجنبية"]
          },
          "city": {
            "type": "string"
          },
          "school_name": {
            "type": "string"
          },
          "xp": {
            "type": "integer",
            "default": 0
          }
        }
      },
      "Subject": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "field": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "coefficient": {
            "type": "integer"
          }
        }
      },
      "Resource": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "author": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "subject": {
            "type": "integer"
          },
          "type": {
            "type": "string",
            "enum": ["EXAM", "SUMMARY", "NOTES", "TEXT_BOOKS", "VIDEO"]
          },
          "labels": {
            "type": "string"
          },
          "link": {
            "type": "string",
            "format": "uri"
          },
          "additional_link": {
            "type": "string",
            "format": "uri"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "reports": {
            "type": "integer",
            "default": 0
          }
        }
      },
      "Question": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "author": {
            "type": "integer"
          },
          "subject": {
            "type": "integer"
          },
          "content": {
            "type": "string"
          },
          "date_posted": {
            "type": "string",
            "format": "date"
          },
          "reports": {
            "type": "integer",
            "default": 0
          }
        }
      },
      "Reply": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "question": {
            "type": "integer"
          },
          "parent": {
            "type": "integer",
            "nullable": true
          },
          "author": {
            "type": "integer"
          },
          "content": {
            "type": "string"
          },
          "date_posted": {
            "type": "string",
            "format": "date"
          },
          "reports": {
            "type": "integer",
            "default": 0
          },
          "children": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Reply"
            }
          }
        }
      },
      "ImageQuestion": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "img": {
            "type": "string",
            "format": "uri"
          },
          "question": {
            "type": "integer"
          }
        }
      },
      "ImageReply": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "img": {
            "type": "string",
            "format": "uri"
          },
          "reply": {
            "type": "integer"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "details": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/authentication/register/": {
      "post": {
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user": {
                    "type": "object",
                    "properties": {
                      "username": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string",
                        "format": "email"
                      },
                      "password": {
                        "type": "string"
                      }
                    },
                    "required": ["username", "email", "password"]
                  },
                  "field": {
                    "type": "string"
                  },
                  "city": {
                    "type": "string"
                  },
                  "school_name": {
                    "type": "string"
                  }
                },
                "required": ["user", "field"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "details": {
                      "$ref": "#/components/schemas/Profile"
                    },
                    "success": {
                      "type": "string"
                    },
                    "refresh": {
                      "type": "string"
                    },
                    "access": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/authentication/login/": {
      "post": {
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "refresh": {
                      "type": "string"
                    },
                    "access": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/authentication/change_password/": {
      "post": {
        "summary": "Change user password",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "old_password": {
                    "type": "string"
                  },
                  "new_password": {
                    "type": "string"
                  },
                  "new_password_confirm": {
                    "type": "string"
                  }
                },
                "required": ["old_password", "new_password", "new_password_confirm"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password changed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
